<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PassworldAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <!-- Opcional: para iconos claros en la barra de estado -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorOnSurface">#B1B1B1</item>
        <item name="colorPrimaryText">#D9D9D9</item>
        <item name="colorSecondaryText">#AAAAAA</item>
        <item name="colorProtectIcon">#787878</item>
        <item name="colorSearchBar">#1F1F1F</item>
        <item name="android:textColorHint">#737373</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>

        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Theme.PassworldAndroid" parent="Base.Theme.PassworldAndroid">
        <!-- Colores personalizados para el menÃº en modo oscuro -->
        <item name="popupMenuStyle">@style/PopupMenu.PassworldAndroid</item>
        <item name="popupMenuBackground">@color/black</item>

    </style>

    <style name="PopupMenu.PassworldAndroid" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background_dark</item>
    </style>
</resources>