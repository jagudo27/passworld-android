<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PassworldAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <!-- Opcional: para iconos claros en la barra de estado -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorOnSurface">#B1B1B1</item>
        <item name="colorPrimaryText">#D9D9D9</item>
        <item name="colorSecondaryText">#AAAAAA</item>
        <item name="colorProtectIcon">#787878</item>
        <item name="colorSearchBar">#1F1F1F</item>
        <item name="android:textColorHint">#737373</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>

        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Theme.PassworldAndroid" parent="Base.Theme.PassworldAndroid">
        <!-- Colores personalizados para el menú en modo oscuro -->
        <item name="popupMenuStyle">@style/PopupMenu.PassworldAndroid</item>
        <item name="popupMenuBackground">@color/black</item>

    </style>

    <style name="PopupMenu.PassworldAndroid" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background_dark</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:itemTextAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="fontFamily">@font/helveticaneue_medium</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
    </style>
    <style name="BlackSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/iconTint</item>
        <item name="android:secondaryProgressTint">@color/iconTint</item>
        <item name="android:thumbTint">@color/iconTint</item> <!-- Color del thumb del SeekBar -->
    </style>
    <style name="BlackCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">

        <item name="colorControlNormal">@color/white</item> <!-- Color del borde del CheckBox sin marcar -->
        <item name="android:buttonTint">@color/white</item> <!-- Color del botón del CheckBox -->
        <item name="android:buttonStyle">@style/BlackCheckBox</item> <!-- Aplicar el estilo personalizado -->
        <item name="colorControlActivated">@color/black</item> <!-- Color del CheckBox marcado -->

    </style>
</resources>