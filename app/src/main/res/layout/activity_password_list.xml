<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passwordListRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    android:paddingHorizontal="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="16dp">

    <!-- Logo / Imagen superior centrada -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/passworld_logo" />

    <!-- Contenedor título + acciones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Título principal -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/all_passwords"
            android:textSize="20sp"
            android:textColor="?attr/colorOnBackground"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Acciones: buscador y ordenar -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔍  ⇅"
            android:textSize="20sp"
            android:textColor="?attr/colorPrimary"
            android:gravity="center"
            android:contentDescription="Buscador y ordenar" />
    </LinearLayout>

    <!-- Línea divisoria -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurfaceVariant"
        android:alpha="0.12"
        android:layout_marginBottom="12dp" />

    <!-- RecyclerView con altura flexible y scroll -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/passwordRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls" />

    <!-- Vista vacía para cuando no hay contraseñas -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="No hay contraseñas"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:visibility="gone" />

</LinearLayout>
