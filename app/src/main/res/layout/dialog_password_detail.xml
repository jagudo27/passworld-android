<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingHorizontal="8dp">

        <!-- Card de estado de seguridad con bordes más redondeados -->

        <androidx.cardview.widget.CardView
            android:id="@+id/issuesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/cardBackground"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="14dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="18dp">

                <ImageView
                    android:id="@+id/securityStatusIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/protect_icon" />


                <TextView
                    android:id="@+id/securityIssuesText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Campos de información con estilo outlined más premium -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="@string/hint_description"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/secondaryText"
            app:hintTextColor="@color/secondaryText">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialogDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:padding="16dp"
                android:text="@string/default_description"
                android:textColor="#000000"
                android:textIsSelectable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="@string/hint_username"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/secondaryText"
            app:hintTextColor="@color/secondaryText"
            app:startIconDrawable="@drawable/username_icon"
            app:startIconTint="#9E9DA0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialogUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:padding="16dp"
                android:text="@string/default_username"
                android:textColor="#000000"
                android:textIsSelectable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="@string/hint_url"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/secondaryText"
            app:hintTextColor="@color/secondaryText"
            app:startIconDrawable="@drawable/ic_link"
            app:startIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialogUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:padding="16dp"
                android:text="@string/default_url"
                android:textColor="#000000"
                android:textIsSelectable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="@string/password_hint"
            app:boxBackgroundColor="#FAFAFA"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/secondaryText"
            app:endIconMode="password_toggle"
            app:hintTextColor="@color/secondaryText"
            app:startIconDrawable="@drawable/ic_password"
            app:startIconTint="#9E9DA0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialogPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="textPassword"
                android:padding="16dp"
                android:text="@string/default_password"
                android:textColor="#000000"
                android:textIsSelectable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones con estilo Material mejorado -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/savePasswordButton2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/helveticaneue_medium"
                android:text="@string/button_save"
                android:textAllCaps="false"
                android:textColorLink="#000000"
                app:backgroundTint="#000000"
                app:cornerRadius="10dp"
                app:icon="@drawable/save_icon_white"
                app:iconGravity="textStart"
                app:iconPadding="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deletePasswordButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="@font/helveticaneue_medium"
                android:text="@string/button_delete"
                android:textAllCaps="false"
                android:textColorLink="#000000"
                app:backgroundTint="#000000"
                app:cornerRadius="10dp"
                app:icon="@drawable/trash_icon"
                app:iconGravity="textStart"
                app:iconPadding="5dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogCloseButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fadingEdgeLength="2dp"
            android:fontFamily="@font/helveticaneue_medium"
            android:text="@string/button_close"
            android:textAllCaps="false"
            android:textColor="#2E2D2D"
            android:textColorLink="#D3D3D3"
            app:cornerRadius="12dp"
            app:elevation="2dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>